---
const { videos } = Astro.props;
---

<div class="youtube-grid">
  {videos.map((video) => (
    <div class="video-card">
      <h3>{video.title}</h3>
      <iframe 
        width="100%" 
        height="215" 
        src={`https://www.youtube.com/embed/${video.id}`}
        frameborder="0" 
        allowfullscreen>
      </iframe>
    </div>
  ))}
</div>

<style>
  .youtube-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1rem;
    margin: 2rem 0;
  }
  
  .video-card {
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 8px;
    padding: 1rem;
  }
  
  .video-card h3 {
    margin-top: 0;
  }
</style>