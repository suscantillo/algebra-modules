---
const { books } = Astro.props;
---

<div class="books-grid">
  {books.map((book) => (
    <a href={book.link} target="_blank" rel="noopener noreferrer" class="book-card">
      <div class="book-cover">
        <img src={book.cover} alt={`Portada de ${book.title}`} />
        <div class="book-overlay">
          <span class="view-book">Ver libro</span>
        </div>
      </div>
      <div class="book-info">
        <h3>{book.title}</h3>
        {book.author && <p class="author">{book.author}</p>}
        {book.description && <p class="description">{book.description}</p>}
      </div>
    </a>
  ))}
</div>

<style>
  .books-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 2rem;
    margin: 2rem 0;
    padding: 1rem;
    align-items: start;
  }
  
  .book-card {
    background: var(--sl-color-bg-nav);
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    border: 1px solid var(--sl-color-gray-5);
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: inherit;
    height: 100%;
    position: relative;
    top: 0;
  }
  
  .book-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.2);
    border-color: var(--sl-color-accent);
  }
  
  .book-cover {
    position: relative;
    width: 100%;
    aspect-ratio: 2/3; /* Proporción típica de portadas de libros */
    overflow: hidden;
    background: linear-gradient(135deg, var(--sl-color-gray-6) 0%, var(--sl-color-gray-5) 100%);
  }
  
  .book-cover img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .book-card:hover .book-cover img {
    transform: scale(1.05);
  }
  
  .book-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.7);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .book-card:hover .book-overlay {
    opacity: 1;
  }
  
  .view-book {
    color: white;
    font-weight: 600;
    font-size: 1.1rem;
    padding: 0.75rem 1.5rem;
    border: 2px solid white;
    border-radius: 8px;
    background: transparent;
    transition: all 0.3s ease;
  }
  
  .book-card:hover .view-book {
    background: var(--sl-color-accent);
    border-color: var(--sl-color-accent);
    transform: scale(1.05);
  }
  
  .book-info {
    padding: 1.5rem;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .book-info h3 {
    margin: 0;
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--sl-color-white);
    line-height: 1.3;
  }
  
  .author {
    margin: 0;
    font-size: 1rem;
    color: var(--sl-color-accent);
    font-weight: 500;
    font-style: italic;
  }
  
  .description {
    margin: 0;
    font-size: 0.9rem;
    color: var(--sl-color-gray-2);
    line-height: 1.5;
    flex-grow: 1;
  }

  @media (max-width: 640px) {
    .books-grid {
      grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
      gap: 1.5rem;
      padding: 0.5rem;
    }
    
    .book-info {
      padding: 1rem;
    }
    
    .book-info h3 {
      font-size: 1.1rem;
    }
    
    .author {
      font-size: 0.9rem;
    }
    
    .description {
      font-size: 0.85rem;
    }
  }
</style>